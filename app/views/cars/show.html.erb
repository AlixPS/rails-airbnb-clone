  <h1><%= @car.brand %> <%= @car.model%> | <%= @car.category %></h1>

  <hr>
  <%= link_to "Modifier cette voiture", edit_car_path(@car) %> <br>
  <%= cl_image_tag @car.photo, height: 300, width: 700, crop: :limit %>
