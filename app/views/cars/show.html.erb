<h1><%= @car.brand %> <%= @car.model%> | <%= @car.category %></h1>
<hr>
<%= link_to "Edit that car", edit_car_path(@car) %>
<hr>
<p>
  <%= @car.user.first_name %>
  <%= @car.user.last_name  %> 's car
</p>
<% if @car.user == current_user %>
  <p>Rental's details</p>
  <ul>
    <% @car.rentals.each do |rental| %>
      <li><%= rental.checkin %></li>
      <li><%= rental.checkout %></li>
      <hr>
    <% end %>
  </ul>
<% end %>
<hr>
  <h4>What other users say about this car : </h4>
  <p>Reviews, Reviews, Reviews</p>

<%= link_to "Start a rental", new_car_rental_path(@car) %>
<br>
<%= link_to "Back to index", root_path %>
