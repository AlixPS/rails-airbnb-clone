    <span class="fas fa-search"> </span>
    </form>
    <h1>Choisissez. Roulez. Profitez.</h1>
    <p>Smap est là!</p>
  </div>
</div>
<div id="home-map" data-markers="<%= @markers.to_json %>"></div>
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-xs-12 col-sm-4">
        <%= render 'shared/card', car: car %>
      </div>
    <% end %>
  </div>
